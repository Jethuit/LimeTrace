{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: build workspace (debug)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--bin",
        "limetrace-backend",
        "--bin",
        "limetrace"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CARGO_INCREMENTAL": "0"
        }
      }
    },
    {
      "label": "cargo: build workspace (release)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--release",
        "--bin",
        "limetrace-backend",
        "--bin",
        "limetrace"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "CARGO_INCREMENTAL": "0"
        }
      }
    },
    {
      "label": "dev: open app (debug)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".\\scripts\\dev-open.ps1"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "dev: stop daemon",
      "type": "shell",
      "command": "taskkill",
      "args": [
        "/IM",
        "limetrace-backend.exe",
        "/F"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
